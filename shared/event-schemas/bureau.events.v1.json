{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "urn:los:events:bureau:v1",
  "title": "Bureau Events v1",
  "type": "object",
  "oneOf": [
    { "$ref": "#/definitions/BureauPullRequested" },
    { "$ref": "#/definitions/BureauReportReceived" }
  ],
  "definitions": {
    "BaseEvent": {
      "type": "object",
      "properties": {
        "eventId": { "type": "string", "format": "uuid" },
        "occurredAt": { "type": "string", "format": "date-time" },
        "producer": { "type": "string" },
        "schemaVersion": { "type": "string", "enum": ["v1"] }
      },
      "required": ["eventId", "occurredAt", "producer", "schemaVersion"]
    },
    "BureauPullRequested": {
      "allOf": [
        { "$ref": "#/definitions/BaseEvent" },
        {
          "type": "object",
          "properties": {
            "type": { "const": "los.bureau.BureauPullRequested.v1" },
            "applicationId": { "type": "string", "format": "uuid" },
            "requestId": { "type": "string", "format": "uuid" },
            "provider": { "type": "string" }
          },
          "required": ["type", "applicationId", "requestId"]
        }
      ]
    },
    "BureauReportReceived": {
      "allOf": [
        { "$ref": "#/definitions/BaseEvent" },
        {
          "type": "object",
          "properties": {
            "type": { "const": "los.bureau.BureauReportReceived.v1" },
            "applicationId": { "type": "string", "format": "uuid" },
            "requestId": { "type": "string", "format": "uuid" },
            "score": { "type": "number", "minimum": 0 },
            "provider": { "type": "string" }
          },
          "required": ["type", "applicationId", "requestId"]
        }
      ]
    }
  }
}

